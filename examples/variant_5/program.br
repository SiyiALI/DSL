
game Variant5 {

  players {
    player Hope color="Cyan" type=human;
    player Joy color="Orange" type=human;
    player Light color="Pink" type=ai;
  }

  board {
    cells = 120; // RT : Grande taille = progression lente, marathon

    //cases sp√©ciales
